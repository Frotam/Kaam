<body>
    <button onclick="rpc('rock')"  class="btn">Rock </button>
    <button onclick="rpc('paper')" class="btn">Paper</button>
    <button onclick="rpc('scizor')" class="btn">Scizor</button>
<button onclick="reset()" class="btn">reset</button>
<div id="demo"></div>
    <script>
 const score=JSON.parse(localStorage.getItem('score'))||{win:0,lose:0,tie:0} ;
        //function for reset of scores 
        function reset(){
            score.win=0;
            score.lose=0;
            score.tie=0;
            //to display result 
            localStorage.removeItem('score');
            alert(`win ${score.win} lose ${score.lose} tie${score.tie}`);
            let text=(`win=${score.win},lose=${score.lose},tie=${score.tie}`);
            document.getElementById('demo').innerHTML=text;
        }
        console.log(JSON.parse(localStorage.getItem('score')));
        //function for computer and user input 
        function rpc(input){
           //for computers pick
            const cpi=Math.random();
            let cp='';
            if(cpi>=0&&cpi<1/3){
                cp='rock';
            }
            else if(cpi>=1/3&&cpi<2/3){
                cp='paper';
            }
            else if(cpi>=2/3&&cpi<1){
                cp='scizor';
            }
            //for users pick
            let result='';
            if(input===cp){
                result='tie';
            }
            else if(
            (input==='rock'&&cp==='paper')||(input==='paper'&&cp==='scizor')||(input==='scizor'&&cp==='rock')){
                result='you Lose';
            }
            else{
                result='you won'
            }if(result==='you won'){
                score.win+=1;
            }
             else if(result==='tie'){ 
                score.tie+=1;
            }
            else if (result==='you Lose'){
                score.lose+=1;
            }
            localStorage.setItem('score',JSON.stringify(score));
            //to display result 
            alert(`${result} i.e sidhant choses ${cp}   \n win ${score.win} lose ${score.lose} tie${score.tie}`);
            let text=(`win=${score.win},lose=${score.lose},tie=${score.tie}`);
            document.getElementById('demo').innerHTML=text;
        }
    </script>
</body>
</html>
