<body>
    <button onclick="rpc('rock')"  class="btn">Rock </button>
    <button onclick="rpc('paper')" class="btn">Paper</button>
    <button onclick="rpc('scizor')" class="btn">Scizor</button>
    <script>
        function rpc(input){
            const cpi=Math.random();
            let cp='';
            if(cpi>=0&&cpi<1/3){
                cp='rock';
            }
            else if(cpi>=1/3&&cpi<2/3){
                cp='paper';
            }
            else if(cpi>=2/3&&cpi<1){
                cp='scizor';
            }
            let result='';
            if(input===cp){
                result='tie';
            }
            else if(
            (input==='rock'&&cp==='paper')||(input==='paper'&&cp==='scizor')||(input==='scizor'&&cp==='rock')){
                result='you Lose';
            }
            else{
                result='you won'
            }
            alert(`${result} i.e sidhant choses ${cp}`);
        }
    </script>
</body>
