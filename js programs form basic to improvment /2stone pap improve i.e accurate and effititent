    <style>
        .btn{
            width: 150px;
            margin: 100px;
            height: 100px;
            font-size: xx-large;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            color: white;
            background-color: black;
        }
        #demo{
            
            font-size: xx-large;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
