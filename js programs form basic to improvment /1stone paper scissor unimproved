        cpick='paper';
        console.log(cpick);
    }
    else{
        cpick='scissor';
        console.log(cpick);
    }
      let result='';
     if(cpick==='rock'){
        result='tie';
     }
     else if(cpick==='paper'){
        result='you lose';
     }
     else{
        result='you won';
     } 
     alert(` ${result} i.e computer choose ${cpick}`)
    
    
    ">Rock</button>
